
<div class="container">
  <h2 id="title">Welcome to Ember</h2>

  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <div class="row">
        <h3>{{value}}</h3>
      </div>
      <div class="row btn-group btn-group-lg">
          {{number-key num='AC' pushNumber=(action 'pushOperation')}}
          {{number-key num='+/-' pushNumber=(action 'pushOperation')}}
          {{number-key num='%' pushNumber=(action 'pushOperation')}}
          {{number-key num='/' pushNumber=(action 'pushOperation')}}
      </div>
      <div class="row btn-group btn-group-lg">
          {{number-key num='7' pushNumber=(action 'pushNumber')}}
          {{number-key num='8' pushNumber=(action 'pushNumber')}}
          {{number-key num='9' pushNumber=(action 'pushNumber')}}
          {{number-key num='X' pushNumber=(action 'pushOperation')}}
      </div>
      <div class="row">
        <div class="btn-group btn-group-lg">
          {{number-key num='4' pushNumber=(action 'pushNumber')}}
          {{number-key num='5' pushNumber=(action 'pushNumber')}}
          {{number-key num='6' pushNumber=(action 'pushNumber')}}
          {{number-key num='-' pushNumber=(action 'pushOperation')}}
      </div>
      </div>
      <div class="row">
        <div class="btn-group btn-group-lg">
          {{number-key num='1' pushNumber=(action 'pushNumber')}}
          {{number-key num='2' pushNumber=(action 'pushNumber')}}
          {{number-key num='3' pushNumber=(action 'pushNumber')}}
          {{number-key num='+' pushNumber=(action 'pushOperation')}}
        </div>
      </div>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>

